<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<div class="panel panel-default">
			<div class="panel-heading">Signin system</div>
			<div class="panel-body">
				<% if flash[:error] %>
					 <div class="alert alert-warning .alert-dismissible" role="alert">
					 	<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
					 	<%= flash[:error] %>
					 </div>
				<% end %>
				<%= bootstrap_form_for(:sessions, url: sessions_path ) do |f| %>
				<%= f.text_field :email, label: t('Email') %>
				<%= f.password_field :password, label: t('Password') %>
				<%= f.submit t("Sign in") %>
				<% end %>

				<p>New user? <%= link_to t("Sign up now!"), users_register_path %></p>
			</div>
		</div>
	</div>
</div>